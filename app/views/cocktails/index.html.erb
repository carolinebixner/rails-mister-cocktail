<div class='container'>
  <h1> A list of your cocktails</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

<tbody>
<%  @cocktails.each do |cocktail| %>
<tr>
  <td> <%= cocktail.name %></td>
  <td></td>
    <td> <%= link_to 'Show', cocktail_path(cocktail) %></td>
</tr>
<% end %>
</tbody>

</table>


<div class="btn btn-info">
  <%= link_to 'Create a new cocktail', new_cocktail_path %>
</div>
</div>
